<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.frvalent.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/button_messages"
        android:layout_width="116dp"
        android:layout_height="102dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:onClick="manageMessages"
        android:text="MESSAGES"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_roaming" />

    <Button
        android:id="@+id/button_softphone"
        android:layout_width="116dp"
        android:layout_height="102dp"
        android:text="SOFTPHONE"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_sdesk"
        android:layout_width="116dp"
        android:layout_height="102dp"
        android:text="OPEN SERVICE DESK TICKET"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button_softphone"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_roaming"
        android:layout_width="116dp"
        android:layout_height="102dp"
        android:text="ADVANCED ROAMING SETTINGS"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintRight_toLeftOf="@+id/button_sdesk"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.505" />

    <Button
        android:id="@+id/button2"
        android:layout_width="116dp"
        android:layout_height="102dp"
        android:onClick="sendMessage"
        android:text="@string/button_send"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toLeftOf="@+id/button_softphone"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.505" />

</android.support.constraint.ConstraintLayout>
